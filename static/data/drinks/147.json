{
    "names": [
        "Bloody Maria"
    ],
    "ingredients": [
        "1 oz  Tequila",
        "2 oz  Tomato juice",
        "1 dash  Lemon juice",
        "1 dash  Tabasco sauce",
        "1 dash  Celery salt",
        "1 slice  Lemon"
    ],
    "method": [
        "Old-fashioned glass",
        "Shake all ingredients (except lemon slice) with cracked ice and strain into an old-fashioned glass over ice cubes",
        "Add the slice of lemon and serve"
    ],
